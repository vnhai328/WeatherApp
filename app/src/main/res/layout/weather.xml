<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="615dp"
    android:orientation="vertical"
    android:background="@drawable/background1"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:id="@+id/txvCity"
                    android:layout_width="0dp"
                    android:layout_weight="9.5"
                    android:layout_height="match_parent"
                    android:text="City"
                    android:textSize="32dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-medium">
                </TextView>
                <ImageView
                    android:id="@+id/imgMore"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/info"></ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/txvCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="16dp"
                android:textColor="#ffffff">
            </TextView>
            <TextView
                android:id="@+id/txvLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lat"
                android:visibility="invisible"></TextView>
            <TextView
                android:id="@+id/txvLongtitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lon"
                android:visibility="invisible"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">
            <TextView
                android:id="@+id/txvTemp"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="00Â°C"
                android:textSize="60dp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="bottom|left">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgWeather"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/weather">
                </ImageView>
                <TextView
                    android:id="@+id/txvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="Status"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="left|center"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/rounded"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Rain"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/txvRain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Humidity"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/txvHumidity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Wind"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/txvWind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="m/s"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>